<div class="flex justify-center items-center py-48">
  <div class="p-5">
    <div class="flex justify-between gap-10 mb-5">
      <h1 class="font-bold text-3xl">My reminders</h1>
      <button class="bg-[#9dc5b]">
        <%= link_to "Create reminder", new_reminder_path, data: { turbo_frame: "reminder_form" }, class: "bg-[#F45B69] hover:bg-[#F45B69]/80 p-2 rounded font-semibold" %>
      </button>
    </div>
    <%= turbo_frame_tag "reminder_form" do %>
    <% end %>
    

    <div id="reminders">
      <%= render partial: "reminder", collection: @reminders %>
    </div>
  </div>
</div>